{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "ccc-lib": {
      "projectType": "library",
      "root": "projects/ccc-lib",
      "sourceRoot": "projects/ccc-lib/src",
      "architect": {
        "build": {
          "builder": "@angular/build:ng-packagr",
          "options": {
            "project": "projects/ccc-lib/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/ccc-lib/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/ccc-lib/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular/build:karma",
          "options": {
            "tsConfig": "projects/ccc-lib/tsconfig.spec.json",
            "polyfills": ["zone.js", "zone.js/testing", "@angular/localize/init"]
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/ccc-lib/**/*.ts", "projects/ccc-lib/**/*.html"],
            "eslintConfig": "projects/ccc-lib/eslint.config.js"
          }
        }
      }
    },
    "showcase-app": {
      "projectType": "application",
      "schematics": {
        "@schematics/angular:component": {
          "style": "scss"
        }
      },
      "root": "projects/showcase-app",
      "sourceRoot": "projects/showcase-app/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular/build:application",
          "options": {
            "browser": "projects/showcase-app/src/main.ts",
            "tsConfig": "projects/showcase-app/tsconfig.app.json",
            "inlineStyleLanguage": "scss",
            "polyfills": ["zone.js", "@angular/localize/init"],
            "assets": [
              {
                "glob": "**/*",
                "input": "projects/showcase-app/public"
              }
            ],
            "styles": [
              "projects/showcase-app/src/styles.scss",
              {
                "input": "node_modules/@progress/kendo-theme-default/dist/all.css"
              },
              "projects/showcase-app/src/custom-theme.scss",
              "projects/showcase-app/src/styles.scss"
            ]
          },
          "configurations": {
            "production": {
              "budgets": [
                {
                  "type": "initial",
                  "maximumWarning": "1mb",
                  "maximumError": "2MB"
                },
                {
                  "type": "anyComponentStyle",
                  "maximumWarning": "4kB",
                  "maximumError": "8kB"
                }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular/build:dev-server",
          "options": {
            "servePath": "/",
            "proxyConfig": "proxy.conf.js"
          },
          "configurations": {
            "production": {
              "buildTarget": "showcase-app:build:production"
            },
            "development": {
              "buildTarget": "showcase-app:build:development"
            }
          },
          "defaultConfiguration": "development"
        },
        "test": {
          "builder": "@angular/build:unit-test"
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": ["projects/showcase-app/**/*.ts", "projects/showcase-app/**/*.html"],
            "eslintConfig": "projects/showcase-app/eslint.config.js"
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "schematicCollections": ["@angular-eslint/schematics"]
  },
  "schematics": {
    "@schematics/angular:component": {
      "type": "component"
    },
    "@schematics/angular:directive": {
      "type": "directive"
    },
    "@schematics/angular:service": {
      "type": "service"
    },
    "@schematics/angular:guard": {
      "typeSeparator": "."
    },
    "@schematics/angular:interceptor": {
      "typeSeparator": "."
    },
    "@schematics/angular:module": {
      "typeSeparator": "."
    },
    "@schematics/angular:pipe": {
      "typeSeparator": "."
    },
    "@schematics/angular:resolver": {
      "typeSeparator": "."
    }
  }
}
