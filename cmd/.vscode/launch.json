    {
      "name": "Run bootstrap in Debug Mode",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/bootstrap/main.go",
      "args": [],
      "buildFlags": "--tags=collect_resource_permissions"
    }
