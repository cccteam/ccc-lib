    {
      "name": "Run server in Debug Mode",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/main.go",
      "args": [],
      "buildFlags": "--tags=skipAuth"
    },
    {
      "name": "Run Resource Generator in Debug Mode",
      "type": "go",
      "request": "launch",
      "mode": "auto",
      "program": "${workspaceFolder}/cmd/generate/resourcegenerator/main.go",
      "args": []
